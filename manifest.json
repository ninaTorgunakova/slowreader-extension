{
  "manifest_version": 3,
  "name": "Slowreader Extension",
  "description": "",
  "version": "0.0.1",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "https://dev.slowreader.app/*"]
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://dev.slowreader.app/*"
  ],
  "permissions": ["activeTab", "scripting"]
}
